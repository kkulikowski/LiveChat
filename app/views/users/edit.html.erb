<%= render 'partials/nav' %>

<div class="container">
  <h1>Update user profile</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user) do |f| %>
        <%= f.label :role %>
        <%= f.select :role, ['user', 'trainer'], class: 'form-control custom-select' %>
        <br>
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.submit "Save changes", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>